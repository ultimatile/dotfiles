syntax on
filetype plugin indent on  
set shiftround
set confirm
set belloff=all
set spelllang=en,cjk
set linebreak 
set laststatus=3
set statusline=%y
set nocompatible
set encoding=utf-8
set number
set cursorline
set showcmd
set showmatch
set title
set wildmenu
set hlsearch
set incsearch
set ignorecase
set smartcase
set wrapscan
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set noswapfile
set clipboard=unnamedplus
set splitbelow
set splitright
set mouse=a
set nofoldenable
set ttyfast 
" keymaps
nnoremap <C-s> :w<CR>
inoremap <C-s> <Esc>:w<CR>a

